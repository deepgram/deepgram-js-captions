{
  "include": ["src"],
  "exclude": ["node_modules/**/*.ts"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "outDir": "dist/main",
    "rootDir": "src",
    "sourceMap": true,
    "target": "ES2015",

    "strict": true,

    "esModuleInterop": true,
    "moduleResolution": "Node",

    "resolveJsonModule": true,

    "forceConsistentCasingInFileNames": true,
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  }
}
